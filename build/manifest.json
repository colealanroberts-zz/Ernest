{
    "name": "Ernest",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Choose the best word for your writing.",
    "browser_action": {
        "default_icon": "icons/icon128.png"
    },
    "icons": {
        "16" : "icons/icon16.png",
        "48" : "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "contextMenus",
        "activeTab"
    ],
    "background": {
        "scripts": ["earnest.js"]
    },
    "web_accessible_resources": [
        "earnest-dialog.js"
    ],
    "content_scripts": [
      {
        "matches": ["https://*/*", "http://*/*"],
        "css": ["ernest-dialog.css"],
        "js": ["ernest-dialog.js"],
        "run_at": "document_end"
      }
    ]
}