{
    "name": "Ernest",
    "version": "0.1",
    "manifest_version": 2,
    "description": "Choose the best word for your writing.",
    "browser_action": {
        "default_icon": "icons/icon128.png",
        "popup": "popup.html"
    },
    "icons": {
        "16" : "icons/icon16.png",
        "48" : "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "contextMenus"
    ],
    "background": {
        "scripts": ["earnest.js"]
    }
}